{
  "name": "s4feashouses",
  "version": "1.0.0",
  "type": "module",
  "description": "A browser-based board game with cards, backend in Node.js, communication via Socket.IO.",
  "main": "dist/gameserver.js",
  "scripts": {
    "start": "node dist/gameserver.js",
    "build": "tsc",
    "dev": "concurrently \"tsc --watch\" \"node --watch dist/gameserver.js\"",
    "clean": "rm -rf dist/",
    "rebuild": "npm run clean && npm run build",
    "test": "echo \"No tests specified\" && exit 0"
  },
  "dependencies": {
    "cookie-parser": "^1.4.6",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "pixi.js": "^8.10.1",
    "socket.io": "^4.5.4",
    "winston": "^3.12.0"
  },
  "devDependencies": {

    "typescript": "^5.9.2"
  }
}
