{
  "name": "s4feashouses",
  "version": "1.0.0",
  "type": "module",
  "description": "A browser-based board game with cards, backend in Node.js, communication via Socket.IO.",
  "scripts": {
    "predev":"npm run build",
    "dev": "DEBUG=socket.io:*,socket.io-parser NODE_ENV=development node dist/server/gameserver.js",

    "start": "npm run build && NODE_ENV=production node dist/server/gameserver.js",

    "build:client": "vite build",
    "build:server": "tsc",
    "build": "npm run build:client && npm run build:server",

    "precluster": "npm run build",
    "cluster": "NODE_ENV=production CLUSTER=true node dist/server/gameserver.js",

    "predevcluster":"npm run build",
    "devcluster": "DEBUG=socket.io:*,socket.io-parser NODE_ENV=development CLUSTER=true node dist/server/gameserver.js"
  },
  "dependencies": {
    "@socket.io/redis-adapter": "^8.3.0",
    "connect-redis": "^9.0.0",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.5.0",
    "express": "^4.18.2",
    "express-session": "^1.18.2",
    "pixi.js": "^8.10.1",
    "redis": "^5.10.0",
    "socket.io": "^4.5.4",
    "socket.io-client": "^4.8.1",
    "uuid": "^13.0.0",
    "winston": "^3.19.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@types/connect-redis": "^0.0.23",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^5.0.3",
    "@types/express-session": "^1.18.2",
    "@types/socket.io": "^3.0.1",
    "@types/uuid": "^10.0.0",
    "concurrently": "^9.2.1",
    "prettier": "^3.6.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2",
    "vite": "^6.3.5"
  }
}
